      </MCAN-2>
      <MCAN-3 points="60">
        Description Needed
        <required0 research="MCAN-2" />
        <required1 item="STORM-3" />
        <required2 research="Jackal" />
      </MCAN-3>

      <SG:K points="60">
        Description Needed
        <required0 research="Cor:S" />
        <required1 research="Viper" />
      </SG:K>
      <SG:I points="80">
        Description Needed
        <required0 research="SG:I" />
        <required1 research="Hornet" />
      </SG:I>
      <SG:E points="100">
        Description Needed
        <required0 research="SG:I" />
        <required1 research="Prime" />
      </SG:E>

      <ARM-2 points="40">
        Description Needed
        <required0 research="LR-2" />
      </ARM-2>
      <ARM-3 points="80">
        Description Needed
        <required0 research="ARM-2" />
        <required1 research="Viper" />
      </ARM-3>
      
    </research>
